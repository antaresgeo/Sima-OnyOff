{
    "name": "Filesystem Access Sample",
    "version": "2.1",
    "manifest_version": 2,
    "minimum_chrome_version": "31",
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "permissions": [
        {
            "fileSystem": ["write", "retainEntries", "directory"]
        },
        "storage",
        "http://localhost:8080/tesis/"
    ],
    "file_handlers": {
        "text": {
            "types": [ "text/*"]
        }
    }
}